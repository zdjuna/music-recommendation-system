# Music Recommendation System - Environment Variables
# Copy this file to .env and fill in your API keys

# Last.fm API (Required)
# Get from: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_API_SECRET=your_lastfm_api_secret_here
LASTFM_USERNAME=your_lastfm_username_here

# Cyanite.ai API (Recommended - for professional mood analysis)
# Get from: https://cyanite.ai/
CYANITE_API_KEY=your_cyanite_api_key_here

# OpenAI API (Optional - for AI analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Optional - alternative to OpenAI)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Roon Integration (Optional)
ROON_CORE_HOST=192.168.1.213
ROON_CORE_PORT=9330

# Application Settings
MAX_TRACKS_PER_REQUEST=200
DEFAULT_DISCOVERY_LEVEL=medium
LOG_LEVEL=INFO

# Production Settings (for deployment)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false