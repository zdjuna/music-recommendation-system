# Music Recommendation System Configuration
# Copy this file to 'config.env' and fill in your API keys

# Last.fm API credentials (Required)
# Get these from: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_API_SECRET=your_lastfm_api_secret_here
LASTFM_USERNAME=your_lastfm_username_here

# Cyanite.ai API (Recommended - for advanced mood analysis)
# Get from: https://cyanite.ai/ - Register and create an integration
CYANITE_API_KEY=your_cyanite_api_key_here

# OpenAI API (Optional - for AI analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Optional - alternative to OpenAI)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MusicBrainz (Optional - for enhanced metadata)
# MusicBrainz is free but requires rate limiting
MUSICBRAINZ_USER_AGENT=MusicRecSystem/1.0 (your_email@example.com)

# Roon API (Optional - for playlist integration)
# Configure through Roon app settings
ROON_CORE_HOST=your_roon_core_ip_here
ROON_CORE_PORT=9100

# Streaming Services (Optional - for availability checking)
# Qobuz API (contact Qobuz for API access)
QOBUZ_API_KEY=your_qobuz_api_key_here
QOBUZ_API_SECRET=your_qobuz_api_secret_here

# Tidal API (contact Tidal for API access)
TIDAL_API_KEY=your_tidal_api_key_here

# Application Settings
# Adjust these based on your preferences
MAX_TRACKS_PER_REQUEST=200
DEFAULT_DISCOVERY_LEVEL=medium
RATE_LIMIT_DELAY=1.0
LOG_LEVEL=INFO 